# Cover Letter GPT - Environment Configuration
# ============================================
# Copy this file to .env and configure your settings

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Environment Settings (OPTIONAL)
COVER_LETTER_ENV=development
DEBUG_MODE=true

# Performance Settings (OPTIONAL)
CACHE_SIZE=500
ENABLE_MONITORING=true

# Logging Settings (OPTIONAL)
LOG_LEVEL=INFO

# Application Settings (OPTIONAL)
APP_NAME=Cover Letter GPT
MAX_TOKENS=1500
TEMPERATURE=0.8

# File Paths (OPTIONAL - defaults provided)
# RESUME_FILE=data/profile/TechProfessionalResume.pdf
# SKILLS_FILE=data/profile/skillset.csv
# CRITERIA_FILE=data/profile/criteria.txt
# MEMORY_FILE=output/user_memory.json